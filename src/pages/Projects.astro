---
import Layout from "../layouts/Layout.astro";
import { PROJECTS } from "../const/projects";
import Button from "../components/common/Button.astro"
---

<Layout title="proyectos">
    <section class="pt-32 pb-20 bg-black text-white">
        <div class="max-w-7x1 mx-auto px-4 sm:px-6 lg:px-8 text-center">
            <h1 class="text-5xl font-bold leading-tight mb-6">
                Proyectos
            </h1>
            <p class="text-gray-400 max-w-2x1 mx-auto mb-8">
                Realizados con dedicaci√≥n y mucho amor
            </p>
        </div>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid md:grid-cols-2 gap-10">
                {
                    PROJECTS.map((project) => (
                        <div class="p-6 rounded-xl bg-gray-900 border-gray-800">
                            <div class="grid md:grid-cols-2 gap-10">
                                <div class="flex flex-wrap justify-center items-center">
                                    <img class="w-[200px]" src={project.image}/>
                                </div>    
                                <div>
                                    <h2 class="pb-2 text-2xl font-bold"> {project.title} </h2>
                                    <p> {project.description} </p>
                                </div>
                            </div>
                            <div class="grid md:grid-cols-2 gap-10 pt-5">
                                <div class="flex flex-wrap justify-start">
                                    {
                                        project.technologies.map((tech) => (
                                            <img class="w-10 p-2" src={tech.image}/>
                                        ))
                                    }
                                </div>
                                <div class="flex flex-wrap justify-end sm:justify-start lg:justify-end gap-2">
                                    <img class="w-10" src="https://uxwing.com/wp-content/themes/uxwing/download/brands-and-social-media/github-white-icon.png"/>
                                    <div class="px-4 py-2 rounded-lg transition-colors font-semibold bg-blue-600 text-white hover:bg-blue-700">{project.status}</div>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>  
</Layout>