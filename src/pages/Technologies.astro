---
import { Tech } from "../components/common/Tech";
import Layout from "../layouts/Layout.astro";

import { TECHNOLOGIES } from "../const/technologies";

const front = TECHNOLOGIES.filter((tec) => tec.type === "front-end");

const back = TECHNOLOGIES.filter((tec) => tec.type === "back-end");

const tools = TECHNOLOGIES.filter((tec) => tec.type === "herramienta");
---

<Layout title="Tecnologias">
  <section class="pt-24 pb-2 bg-black text-white">
    <div class="max-w-7x1 mx-auto px-4 sm:px-6 lg:px-8 text-start">
      <h1 class="text-7xl font-bold leading-tight mb-6">Front-end</h1>
      <p class="text-gray-400 max-w-2x1 mx-auto mb-8">
        Front-end: donde el diseño cobra vida y la interacción sucede
      </p>
      <Tech techs={front} client:visible />
    </div>
  </section>
  <section class="pt-2 pb-2 bg-black text-white">
    <div class="max-w-7x1 mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-7xl font-bold leading-tight mb-6 lg:text-end">
        Back-end
      </h1>
      <p class="text-gray-400 max-w-2x1 mx-auto mb-8 lg:text-end">
        ¡Back-end: el motor oculto que hace que todo funcione a la perfección
      </p>
      <Tech techs={back} side="-reverse" client:visible />
    </div>
  </section>
  <section class="pt-2 pb-2 bg-black text-white">
    <div class="max-w-7x1 mx-auto px-4 sm:px-6 lg:px-8 text-start">
      <h1 class="text-7xl font-bold leading-tight mb-6">Herramientas</h1>
      <p class="text-gray-400 max-w-2x1 mx-auto mb-8">
        ¡Herramientas: los pilares invisibles que construyen y sostienen tu
        mundo digital!
      </p>
      <Tech techs={tools} client:visible />
    </div>
  </section>
</Layout>
