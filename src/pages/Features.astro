<Layout title="Servicios">
  <div class="bg-black text-white min-w-screen pt-[70px] h-screen">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 p-6">
      {SERVICES.map((service) => (
        <div class="flex items-center justify-between bg-gray-800 rounded-lg shadow-lg p-6 space-x-4 h-[200px]">
          <div class="flex justify-center items-center w-1/3">
            <img
              class="w-32 h-32 object-cover rounded-md"
              src="https://wallpapers.com/images/featured/imagenes-de-goku-ultra-instinto-xua3r3stnk32s1aj.jpg"
              alt={service.name}
            />
          </div>
          <div class="flex flex-col items-start w-2/3 space-y-2">
            <h2 class="text-2xl font-bold">{service.name}</h2>
            <p class="text-gray-400 text-sm">{service.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</Layout>





