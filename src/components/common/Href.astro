---
export interface Props {
  text: string;
  href?: string;
}
const { text, href = "#" } = Astro.props;
---

<a
  href={href}
  class="flex items-center space-x-2 text-white hover:text-blue-300 transition-colors group"
>
  <span class="font-medium">{text}</span>
  <svg
    class="w-6 h-6 border-2 border-current rounded-full p-1 group-hover:translate-x-1 transition-transform duration-300"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
  </svg>
</a>
