---
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Icon } from "astro-icon/components";

const currentYear = new Date().getFullYear();

const legalLinks = [
  { label: "Términos y Condiciones", href: "/terminos" },
  { label: "Política de Privacidad", href: "/privacidad" },
  { label: "Cookies", href: "/cookies" },
];

const socialLinks = [
  { label: "Facebook", href: "#", icon: "mdi:facebook" },
  { label: "Twitter", href: "#", icon: "mdi:twitter" },
  { label: "LinkedIn", href: "#", icon: "mdi:linkedin" },
  { label: "GitHub", href: "#", icon: "mdi:github" },
];

const quickLinks = [
  { label: "Inicio", href: "/" },
  { label: "Servicios", href: "/servicios" },
  { label: "Proyectos", href: "/proyectos" },
  { label: "Sobre Nosotros", href: "/sobre-nosotros" },
  { label: "Contacto", href: "/contacto" },
];
---

<footer
  class="bg-gradient-to-b from-gray-900 to-black border-t border-gray-800"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <div class="space-y-4">
        <h3 class="text-2xl font-bold text-white">DevFreelance</h3>
        <p class="text-gray-400">
          Transformando ideas en realidad digital. Expertos en desarrollo web y
          soluciones tecnológicas innovadoras.
        </p>
        <div class="flex space-x-4">
          {
            socialLinks.map((link) => (
              <a
                href={link.href}
                class="text-gray-400 hover:text-blue-400 transition-colors"
                aria-label={`Visita nuestro perfil de ${link.label}`}
              >
                <Icon name={link.icon} class="w-6 h-6" />
              </a>
            ))
          }
        </div>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-white mb-4">Enlaces Rápidos</h3>
        <ul class="space-y-2">
          {
            quickLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-400 hover:text-blue-400 transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-white mb-4">Contacto</h3>
        <ul class="space-y-2 text-gray-400">
          <li class="flex items-center">
            <Icon name="mdi:email" class="w-5 h-5 mr-2 text-blue-400" />
            contacto@devfreelance.com
          </li>
          <li class="flex items-center">
            <Icon name="mdi:phone" class="w-5 h-5 mr-2 text-blue-400" />
            +34 123 456 789
          </li>
          <li class="flex items-start">
            <Icon name="mdi:map-marker" class="w-5 h-5 mr-2 text-blue-400" />
            <span>Calle Desarrollo 123,<br />28001 Madrid, España</span>
          </li>
        </ul>
      </div>

      <div>
        <h3 class="text-lg font-semibold text-white mb-4">Suscríbete</h3>
        <p class="text-gray-400 mb-4">
          Recibe nuestras últimas noticias y ofertas
        </p>
        <form class="space-y-2">
          <Input type="email" placeholder="Tu email" required />
          <Button type="submit" variant="default">Suscribirse</Button>
        </form>
      </div>
    </div>

    <div class="mt-8 pt-8 border-t border-gray-800">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-400 text-sm">
          &copy; {currentYear} DevFreelance. Todos los derechos reservados.
        </p>
        <ul class="flex space-x-4 mt-4 md:mt-0">
          {
            legalLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-400 hover:text-blue-400 transition-colors text-sm"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</footer>
