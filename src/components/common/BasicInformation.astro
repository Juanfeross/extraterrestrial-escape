---
import { BASICINFO } from "../../const/basicInfo";
import { Icon } from "astro-icon/components";
---

<section class="py-20 bg-gradient-to-b from-gray-900 to-black">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl font-bold text-white text-center mb-4">
      Nuestro Equipo
    </h2>
    <p class="text-xl text-blue-300 text-center mb-12">
      Expertos dedicados a hacer realidad tu visi√≥n
    </p>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {
        BASICINFO.map((info) => (
          <div class="bg-gray-800 rounded-xl overflow-hidden shadow-lg transition-all duration-300 hover:shadow-blue-500/20 hover:scale-105">
            <div class="relative h-64">
              <img
                class="w-full h-full object-cover"
                src={info.image}
                alt={info.name}
              />
              <div class="absolute inset-0 bg-gradient-to-t from-gray-900 to-transparent" />
            </div>
            <div class="p-6">
              <h3 class="text-2xl font-semibold text-white mb-2">
                {info.name}
              </h3>
              <p class="text-blue-400 mb-4">{info.role}</p>
              <div class="space-y-3">
                <a
                  href={`mailto:${info.email}`}
                  class="flex items-center text-gray-300 hover:text-blue-400 transition-colors"
                >
                  <Icon name="mdi:email" class="w-5 h-5 mr-2" />
                  {info.email}
                </a>
                <a
                  href={`https://wa.me/${info.phoneNumber}`}
                  class="flex items-center text-gray-300 hover:text-blue-400 transition-colors"
                >
                  <Icon name="mdi:whatsapp" class="w-5 h-5 mr-2" />
                  {info.phoneNumber}
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .hover\:scale-105:hover {
    transform: scale(1.05);
  }
</style>
