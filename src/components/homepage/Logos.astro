---
import { TECHNOLOGIES } from "../../const/technologies";
import Carousel from "../common/Carousel.astro";
import Href from "../common/Href.astro";

const carousel = [...TECHNOLOGIES, ...TECHNOLOGIES];
---

<section class="py-20 bg-gradient-to-b from-black to-gray-900">
  <div
    class="flex flex-col items-center max-w-7xl mx-auto px-4 sm:px-6 lg:px-8"
  >
    <h2 class="text-4xl font-bold text-white text-center mb-6">
      Tecnologías que dominamos
    </h2>
    <p class="text-center text-blue-300 text-xl mb-12">
      Con vasta experiencia y mucho amor
    </p>
    <div class="overflow-hidden w-full mb-12">
      <div class="flex animate-scroll">
        {
          carousel.map((tech) => (
            <Carousel name={tech.name} image={tech.image} />
          ))
        }
      </div>
    </div>
    <Href text="Ver Tecnologías" href="#tecnologias" />
  </div>
</section>

<style>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-1000%);
    }
  }

  .animate-scroll {
    animation: scroll 60s linear infinite;
  }
</style>
