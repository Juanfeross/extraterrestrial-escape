---
import { TECHNOLOGIES } from "../../const/technologies";
import Carousel from "../common/Carousel.astro";

import "../../assets/styles/carousel.css";

const carousel = [...TECHNOLOGIES, ...TECHNOLOGIES];

console.log(TECHNOLOGIES.length);
---

<section class="py-16 bg-black border-t border-gray-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl font-bold text-white text-center mb-12">
      Tecnolog√≠as que dominamos
    </h2>
    <p class="text-center text-gray-400 mb-8">
      Con vasta experiencia y mucho amor
    </p>
    <div class="overflow-hidden w-full">
      <div class="flex whitespace-nowrap animate-scroll">
        {
          carousel.map((tech) => (
            <Carousel name={tech.name} image={tech.image} />
          ))
        }
      </div>
    </div>
  </div>
</section>
