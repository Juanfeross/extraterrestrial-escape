---
import { Icon } from "astro-icon/components";

const services = [
  {
    title: "Desarrollo Web",
    description:
      "Creamos sitios web modernos y responsivos que se adaptan a tus necesidades.",
    icon: "mdi:web",
  },
  {
    title: "Diseño UX/UI",
    description:
      "Diseñamos interfaces intuitivas y atractivas para mejorar la experiencia del usuario.",
    icon: "mdi:palette",
  },
  {
    title: "Desarrollo de Apps",
    description:
      "Desarrollamos aplicaciones móviles nativas y multiplataforma para iOS y Android.",
    icon: "mdi:cellphone",
  },
  {
    title: "Consultoría IT",
    description:
      "Ofrecemos asesoramiento experto para optimizar tus procesos tecnológicos.",
    icon: "mdi:lightbulb",
  },
];
---

<section class="py-20 bg-gradient-to-b from-gray-900 to-black">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl font-bold text-center text-white mb-12">
      Nuestros Servicios
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {
        services.map((service) => (
          <div class="bg-gray-800 rounded-xl p-6 shadow-lg transition-all duration-300 hover:shadow-blue-500/20 hover:scale-105">
            <div class="text-blue-500 mb-4">
              <Icon name={service.icon} class="w-12 h-12" />
            </div>
            <h3 class="text-xl font-semibold text-white mb-2">
              {service.title}
            </h3>
            <p class="text-gray-300">{service.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
