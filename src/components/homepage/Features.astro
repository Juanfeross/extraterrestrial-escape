---
import { Icon } from "astro-icon/components";

const services = [
  {
    title: "Desarrollo Web Full Stack",
    description:
      "Creación de aplicaciones web completas, desde el frontend hasta el backend, utilizando las últimas tecnologías.",
    icon: "mdi:code-braces",
  },
  {
    title: "Optimización de Rendimiento",
    description:
      "Mejora de la velocidad y eficiencia de aplicaciones existentes para una experiencia de usuario óptima.",
    icon: "mdi:rocket-launch",
  },
  {
    title: "Consultoría Técnica",
    description:
      "Asesoramiento experto en arquitectura de software, selección de tecnologías y mejores prácticas de desarrollo.",
    icon: "mdi:lightbulb-on",
  },
];
---

<section class="py-20 bg-gradient-to-b from-gray-900 to-black">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <h2 class="text-4xl font-bold text-white text-center mb-4">
      Servicios de desarrollo
    </h2>
    <p class="text-xl text-blue-300 text-center mb-12">
      Personalizados para impulsar tu negocio
    </p>
    <div class="grid md:grid-cols-3 gap-8">
      {
        services.map((service) => (
          <div class="group p-6 rounded-xl bg-gray-800 border border-gray-700 transition-all duration-300 hover:bg-gray-700 hover:border-blue-500 hover:shadow-lg hover:shadow-blue-500/20">
            <div class="flex items-center justify-center w-16 h-16 mb-6 rounded-full bg-blue-600 text-white group-hover:bg-blue-500 transition-colors duration-300">
              <Icon name={service.icon} class="w-8 h-8" />
            </div>
            <h3 class="text-2xl font-semibold text-white mb-4 group-hover:text-blue-300 transition-colors duration-300">
              {service.title}
            </h3>
            <p class="text-gray-300 group-hover:text-white transition-colors duration-300">
              {service.description}
            </p>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .group:hover {
    transform: translateY(-5px);
  }
</style>
